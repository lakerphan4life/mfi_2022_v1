<script>
  (function(){

    // Create a new element
    var newNode = document.getElementById('header-scroll-container');

    // Get the reference node
    var referenceNode = document.querySelector('.header-promo');

    // Insert the new node before the reference node
    referenceNode.appendChild(newNode);


    var slides = document.querySelectorAll('#header-scroll-container .header-scroll-item');
    var currentSlide = 0;
    var slideInterval = setInterval(nextSlide,5000);

    function nextSlide() {
      slides[currentSlide].className = 'header-scroll-item';
      currentSlide = (currentSlide+1)%slides.length;
      slides[currentSlide].className = 'header-scroll-item showing';
    }
  })();
</script>