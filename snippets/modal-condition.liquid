<div class="modal micromodal-slide" id="modal-condition" aria-hidden="true">
  <div class="modal__overlay" tabindex="-1" data-micromodal-close="">
    <div class="modal__container" role="dialog" aria-modal="true" aria-labelledby="modal-condition-title">
      <header class="modal__header">
        <h2 class="modal__title heading h1" id="modal-warranty-title">
          Item Condition
        </h2>
        <button class="modal__close" aria-label="Close modal" data-micromodal-close=""></button>
      </header>
      <div class="modal__content modal-warranty" id="modal-warranty-content">
        <div class="body">
          
          {% if product.type == 'Certified Refurbished' %}
          <h2>certified</h2>
          {% else %}
          not certified
          {% endif %}
        </div>
        <button class="modal__btn" data-micromodal-close="" aria-label="Close this dialog window">Close</button>
      </div>
    </div>
  </div>
</div>